{
  "name": "elmaxishark-optimizer",
  "version": "1.0.0",
  "description": "Optimizador de Windows para Gaming por ElmaxiShark",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "optimizer",
    "windows",
    "gaming",
    "tweak",
    "elmaxishark"
  ],
  "author": "Elmaxi",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.elmaxi.elmaxisharkoptimizer",
    "productName": "ElmaxiShark Optimizer",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "style.css",
      "renderer.js",
      "particles.js",
      "scripts/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/elmaxi_app_icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "portable": {
      "artifactName": "ElmaxiShark Optimizer.exe"
    }
  }
}